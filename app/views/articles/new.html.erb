<h1> new story </h1>

<%= form_for :article, url: articles_path do |f| %>

	<% if @article.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@article.errors.count, "error") %>
			prohibited 
				this article from being saved:
			</h2>

			<ul>
				<%= @article.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to 'my dashboard', dashboard_path %> | <%= link_to 'my stories', articles_path %> | <%= link_to 'home', root_path %>